{
  "name": "@wordpretty/wordpretty",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --filter '*' build",
    "lint": "bun x --bun biome ci",
    "fix": "bun x --bun biome check --fix --unsafe"
  },
  "dependencies": {
    "@wordpretty/shared": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4"
  }
}
